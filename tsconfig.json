{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "outDir": "dist",

    /* Bundler mode */
    "moduleResolution": "Classic",
    "emitDeclarationOnly": false,
    "isolatedModules": true,
    "noEmit": false,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
  },
  "paths": {
    "@/*": ["./*"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
  ]
}